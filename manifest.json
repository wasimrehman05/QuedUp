{
  "manifest_version": 3,
  "name": "QuedUp - Save Coding Questions Effortlessly",
  "version": "1.0", 
  "author": "Wasim Rehman",
  "description": "QuedUp is a smart and minimal Chrome extension that lets you save coding problems from different platforms like LeetCode, Codeforces, CodeChef, AtCoder, and Maang",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://codeforces.com/problemset/problem/*",
        "https://codeforces.com/contest/*/problem/*",
        "https://www.codechef.com/problems/*",
        "https://www.codechef.com/*/problems/*",
        "https://atcoder.jp/contests/*/tasks/*",
        "https://maang.in/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": [
        "assets/add.png",
        "assets/added.png",
        "assets/delete.png",
        "assets/edit.png",
        "assets/open.png",
        "assets/icon.png",
        "assets/leetcode.png",
        "assets/codeforces.png",
        "assets/codechef.jpeg",
        "assets/atcoder.png",
        "assets/maang.png"
      ],
      "matches" : ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon.png",
      "24": "assets/icon.png",
      "32": "assets/icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Coding Questions Tracker"
  }
}
