{
  "manifest_version": 3,
  "name": "QuedUp - Save Coding Questions Effortlessly",
  "version": "1.0", 
  "author": "Wasim Rehman",
  "description": "QuedUp is a smart and minimal Chrome extension that lets you save coding problems from different platforms",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/problems/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": [
        "assets/add.png",
        "assets/added.png",
        "assets/delete.png",
        "assets/edit.png",
        "assets/open.png"
      ],
      "matches" : ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/logo.png",
      "24": "assets/logo.png",
      "32": "assets/logo.png"
    },
    "default_popup": "popup.html",
    "default_title": "Coding Questions Tracker"
  }
}
